{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["@types/chrome", "@types/react", "@types/react-dom"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "../../packages/ui/src"]
}
