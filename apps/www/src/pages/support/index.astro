---
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE } from "../../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>Support - {SITE_TITLE}</title>
  </head>
  <body class="bg-black">
    <Header title={SITE_TITLE} />

    <div
      class="p-6 bg-black text-white flex justify-center pt-10 animate-fade-in opacity-0 [--animation-delay:200ms]"
    >
      <article class="space-y-6 w-full max-w-2xl">
        <h1 class="text-2xl font-bold">Support</h1>

        <p class="text-base font-semibold">
          If you need any help with Flowtide, please contact us at
          hello@thingbomb.com.
        </p>
      </article>
    </div>
    <script src="https://scripts.simpleanalyticscdn.com/latest.js"></script>
    <br />
    <Footer />
  </body>
</html>
